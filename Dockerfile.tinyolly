# TinyOlly Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY tinyolly-requirements.txt .
RUN pip install --no-cache-dir -r tinyolly-requirements.txt

# Copy application
COPY tinyolly.py .
COPY storage.py .
COPY templates/ templates/

# Expose port
EXPOSE 5002

# Run the application
CMD ["gunicorn", "--bind", "0.0.0.0:5002", "--workers", "2", "--timeout", "120", "tinyolly:app"]

