FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY backend-service.py .

ENV FLASK_APP=backend-service.py

# Use OpenTelemetry auto-instrumentation
CMD ["opentelemetry-instrument", "--traces_exporter", "otlp", "--metrics_exporter", "otlp", "--logs_exporter", "otlp", "--service_name", "demo-backend", "flask", "run", "--host=0.0.0.0", "--port=5000"]

